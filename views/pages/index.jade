extends ../layout
block content
	.container
		.row
			each item in movies
				.col-md-2
					.thumbnail
						a(href="/movie/#{item.mid}")
							img(src="#{item.poster}",alt="#{item.title}")
						.caption
							h3 #{item.title}
							p: a.btn.btn-primary(href="/movie/#{item.mid}",role="botton")观看预告片